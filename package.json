{
  "name": "pkg-init-monorepo",
  "version": "0.0.13",
  "private": true,
  "packageManager": "pnpm@7.0.0",
  "scripts": {
    "changelog-md": "auto-changelog --commit-limit false --hide-credit",
    "build": "pnpm -r --parallel --filter=./packages/** run build",
    "dev": "pnpm -r --parallel --filter=./packages/** run dev",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "release": "bumpp package.json packages/*/package.json -a --commit --push --tag",
    "test": "pnpm -r --parallel --filter=./packages/** run test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.23.0",
    "@types/node": "^17.0.31",
    "bumpp": "^7.1.1",
    "changelogen": "^0.0.5",
    "eslint": "^8.15.0",
    "esmo": "^0.14.1",
    "pnpm": "^7.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "unbuild": "^0.7.4",
    "vite": "^2.9.8",
    "vitest": "^0.10.5"
  }
}
